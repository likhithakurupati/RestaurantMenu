@model RestaurantMenu.Models.Dish
@{
}

<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Add Dish</h2>
    <div class="input-container">
        <label asp-for="Title" class="w-40">Dish Name</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ImageFile" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>


    <div class="input-container">
        <label asp-for="Ingredients" class="w-40">Ingredient</label>
        <select asp-items="Model.IngredientList" class="input" asp-for="Ingredients" multiple>
            <option value="">--select--</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Ingredients"> </span>
    </div>

     <div class="input-container">
        <label asp-for="Price" class="w-40">Price</label>
        <input type="text" class="input" asp-for="Price">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Price"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Dish/DishList">All records</a>
    </div>
</form>